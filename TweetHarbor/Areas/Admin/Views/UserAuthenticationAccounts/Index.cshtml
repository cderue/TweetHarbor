@model IEnumerable<TweetHarbor.Models.UserAuthenticationAccount>
@{
    ViewBag.Title = "Index";
}
<h2>
    Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            UserName
        </th>
        <th>
            AccountProvider
        </th>
        <th>
            OAuthTokenSecret
        </th>
        <th>
            OAuthToken
        </th>
        <th>
            ProfilePicUrl
        </th>
        <th>
            User
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountProvider)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OAuthTokenSecret)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OAuthToken)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProfilePicUrl)
            </td>
            <td>
                @item.UserName
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.UserAuthenticationAccountId }) |
                @Html.ActionLink("Details", "Details", new { id = item.UserAuthenticationAccountId })
                |
                @Html.ActionLink("Delete", "Delete", new { id = item.UserAuthenticationAccountId })
            </td>
        </tr>
    }
</table>
